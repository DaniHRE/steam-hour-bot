{
    "compilerOptions": {
        "target": "ES6", // Define o alvo da compilação
        "module": "CommonJS", // Usa CommonJS para suporte ao Node.js
        "outDir": "./dist", // Diretório de saída dos arquivos compilados
        "rootDir": "./src", // Diretório raiz dos arquivos TypeScript
        "strict": true, // Ativa verificações estritas de tipo
        "esModuleInterop": true, // Facilita a importação de módulos CommonJS
        "skipLibCheck": true, // Ignora checagem de tipos em arquivos de biblioteca
        "resolveJsonModule": true // Opção para resolução do "Modulo" JSON
    },
    "include": [
        "src/**/*"
    ], // Inclui todos os arquivos na pasta src
    "exclude": [
        "node_modules"
    ] // Exclui arquivos da pasta node_modules
}